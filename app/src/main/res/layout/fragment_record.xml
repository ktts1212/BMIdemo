<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bmi.child.RecordFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_record"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.AppCompat.Light">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/record_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bmi_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/record_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textFontWeight="400"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/rc_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <bmicalculator.bmi.calculator.weightlosstracker.util.views.ChildBmiDial
                android:id="@+id/rc_child_dial"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginTop="25dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <bmicalculator.bmi.calculator.weightlosstracker.util.views.BmiDial
                android:id="@+id/rc_dial"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_child_dial" />

            <bmicalculator.bmi.calculator.weightlosstracker.util.views.BmiArrow
                android:id="@+id/rc_arrow"
                android:layout_width="32dp"
                android:layout_height="128dp"
                android:layout_marginTop="-174.5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_dial" />

            <TextView
                android:id="@+id/rc_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-80dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/bmi_tip_description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_arrow" />

            <TextView
                android:id="@+id/rc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="24.7"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="64sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_tip" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rc_cal_type_card"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/grey_w"
                android:padding="0dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_num">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rc_cal_type_display"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <TextView
                        android:id="@+id/rc_cal_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:text="Normal"
                        android:textColor="@color/white"
                        android:textFontWeight="800"
                        android:textSize="19sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/rc_type_tip"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView

                        android:id="@+id/rc_type_tip"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/shape_bmi_help"
                        android:backgroundTint="@color/normal"
                        android:src="@drawable/bmi_type_help"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/rc_type_space"
                        app:layout_constraintStart_toEndOf="@id/rc_cal_type_text"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/rc_type_space"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/rc_type_tip" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/rc_cal_info"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:fontFamily="sans-serif-medium"
                android:text="@string/bmi_input_data"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_cal_type_card" />

            <RelativeLayout
                android:id="@+id/rc_cal_type"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_cal_info">

                <include
                    android:id="@+id/rcnewac"
                    layout="@layout/bmi_cal_type_table" />

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rc_suggestion_card"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="#F4F4F4"
                app:layout_constraintBottom_toTopOf="@id/rc_bottom_suggestion_space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_cal_type">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/rc_cal_suggest"
                        android:layout_width="281dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="17dp"
                        android:text="@string/bmi_range_normal_adult_description"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/rc_wt_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rc_cal_suggest"
                        android:layout_alignStart="@id/rc_cal_suggest"
                        android:layout_marginTop="-20dp"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/rc_wt_chazhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rc_cal_suggest"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="-20dp"
                        android:layout_marginBottom="14dp"
                        android:layout_toEndOf="@id/rc_wt_range"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:textColor="#FF0000"
                        android:textFontWeight="400"
                        android:textSize="14sp" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/rc_bottom_suggestion_space"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/rc_ad_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_suggestion_card" />

            <RelativeLayout
                android:id="@+id/rc_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/rc_bottom_space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_bottom_suggestion_space">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/record_view1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="88dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="22.5dp"
                        android:background="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/record_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textFontWeight="800"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/record_view1"
                        app:layout_constraintEnd_toStartOf="@id/record_view2"/>


                    <View
                        android:id="@+id/record_view2"
                        android:layout_width="88dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="22.5dp"
                        android:background="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>



                <TextView
                    android:id="@+id/rc_advertise_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24.5dp"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:text="Apps you might need"
                    android:textColor="@color/black"
                    android:textFontWeight="800"
                    android:textSize="16sp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/rc_ad1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/rc_advertise_tip"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="14.5dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#F4F4F4"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/rc_ad1_iv1"
                            android:layout_width="49dp"
                            android:layout_height="49dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ad6" />



                        <TextView
                            android:id="@+id/rc_ad1_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:layout_toEndOf="@id/rc_ad1_iv1"
                            android:text="@string/ad1"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/rc_ad1_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_below="@id/rc_ad1_tv1"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/rc_ad1_iv1"
                            android:alpha="0.6"
                            android:text="Weight Loss,Lose Belly Fat"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/rc_ad1_iv2"
                            android:layout_width="60dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="54dp"
                            android:layout_toEndOf="@id/rc_ad1_iv1"
                            android:src="@drawable/app_score" />

                        <TextView
                            android:id="@+id/rc_ad1_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="51dp"
                            android:layout_toEndOf="@id/rc_ad1_iv2"
                            android:alpha="0.6"
                            android:text="4.8"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="7.5dp"
                            android:layout_marginEnd="11dp"
                            android:src="@drawable/ad_tag1" />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/rc_ad2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/rc_advertise_tip"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="104.5dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#F4F4F4"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/rc_ad2_iv1"
                            android:layout_width="49dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ad6" />

                        <TextView
                            android:id="@+id/rc_ad2_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:layout_toEndOf="@id/rc_ad2_iv1"
                            android:text="@string/ad1"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/rc_ad2_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_below="@id/rc_ad2_tv1"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/rc_ad2_iv1"
                            android:alpha="0.6"
                            android:text="Weight Loss,Lose Belly Fat"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/rc_ad2_iv2"
                            android:layout_width="60dp"
                            android:layout_height="12dp"

                            android:layout_marginStart="16dp"
                            android:layout_marginTop="54dp"
                            android:layout_toEndOf="@id/rc_ad2_iv1"
                            android:src="@drawable/app_score" />

                        <TextView
                            android:id="@+id/rc_ad2_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"

                            android:layout_marginTop="51dp"
                            android:layout_toEndOf="@id/rc_ad2_iv2"
                            android:alpha="0.6"
                            android:text="4.8"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="7.5dp"
                            android:layout_marginEnd="11dp"
                            android:src="@drawable/ad_tag1" />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/rc_ad3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/rc_advertise_tip"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="194.5dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#F4F4F4"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/rc_ad3_iv1"
                            android:layout_width="49dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ad6" />

                        <TextView
                            android:id="@+id/rc_ad3_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:layout_toEndOf="@id/rc_ad3_iv1"
                            android:text="@string/ad1"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/rc_ad3_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_below="@id/rc_ad3_tv1"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/rc_ad3_iv1"
                            android:alpha="0.6"
                            android:text="Weight Loss,Lose Belly Fat"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/rc_ad3_iv2"
                            android:layout_width="60dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="54dp"
                            android:layout_toEndOf="@id/rc_ad3_iv1"
                            android:src="@drawable/app_score" />

                        <TextView
                            android:id="@+id/rc_ad3_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="51dp"
                            android:layout_toEndOf="@id/rc_ad3_iv2"
                            android:alpha="0.6"
                            android:text="4.8"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="7.5dp"
                            android:layout_marginEnd="11dp"
                            android:src="@drawable/ad_tag1" />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <View
                android:id="@+id/rc_bottom_space"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>