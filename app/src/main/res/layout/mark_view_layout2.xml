<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
   android:gravity="center_horizontal"
    android:layout_marginTop="6dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/entry_card"
        android:layout_width="65dp"
        android:layout_height="26dp"
        android:backgroundTint="#00000000"
        app:cardCornerRadius="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">


            <ImageView
                android:id="@+id/entry2_bg1"
                android:layout_width="65dp"
                android:layout_height="23dp"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:src="@drawable/entry2_bg1" />

            <ImageView
                android:id="@+id/entry_bg2"
                android:layout_width="7dp"
                android:layout_height="4dp"
                android:layout_below="@id/entry2_bg1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="#00000000"
                android:src="@drawable/entry2_bg2" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:gravity="center"
                android:text="65.0 kg"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <ImageView
        android:id="@+id/big_circle"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_below="@id/view_space"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_circle2"
        android:backgroundTint="@color/white" />

    <ImageView
        android:id="@+id/small_circle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/view_space"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_circle1"
        android:backgroundTint="@color/white" />

    <View
        android:id="@+id/view_space"
        android:layout_width="65dp"
        android:layout_height="5dp"
        android:layout_below="@id/entry_card"
        android:alpha="0"
        android:background="@color/white" />



</RelativeLayout>
