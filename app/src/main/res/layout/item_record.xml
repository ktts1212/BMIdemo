<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="99.5dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/record_bmi"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="24.7"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13.5dp"
                android:textSize="27sp"
                android:textFontWeight="800"
                android:fontFamily="@font/montserrat_extrabold"/>
            
            <ImageView
                android:id="@+id/record_dot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:layout_constraintTop_toBottomOf="@id/record_bmi"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_record_dot"
                android:backgroundTint="@color/black"/>

            <TextView
                android:id="@+id/record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/record_dot"
                android:layout_marginStart="5dp"
                android:maxWidth="160dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/record_bmi"
                android:textFontWeight="400"/>
            
            <ImageView
                android:id="@+id/record_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/record_check"/>

            <TextView
                android:id="@+id/record_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May 6,2021"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/record_check"
                android:layout_marginEnd="9.5dp"
                android:layout_marginTop="21.5dp"
                android:textSize="15sp"
                android:textFontWeight="400"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/record_phase"
                android:textColor="@color/black"
                android:text="Morning"
                app:layout_constraintEnd_toStartOf="@id/record_check"
                android:layout_marginEnd="9.5dp"
                app:layout_constraintTop_toBottomOf="@id/record_date"
                android:textSize="15sp"
                android:textFontWeight="400"/>

                

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>