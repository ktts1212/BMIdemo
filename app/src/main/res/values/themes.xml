<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BMICalculatorWeightLossTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">#F5F5F5</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Theme.BMICalculatorWeightLossTracker.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#ff0099cc</item>
    </style>
    
    <style name="DatePickerStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    
    <style name="NoUnderlineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">
            @android:color/transparent
        </item>
    </style>

    <style name="CalculatorResultFragment" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>
    
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>
</resources>